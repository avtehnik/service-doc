{
  "name": "avtehnik/service-doc",
  "type": "library",
  "license": "Apache-2.0",
  "bin": [
    "bin/servicedoc"
  ],
  "description": "swagger-php - Generate interactive documentation for your RESTful API using phpdoc annotations",
  "keywords": [
    "json",
    "rest",
    "api",
    "service discovery"
  ],
  "homepage": "https://github.com/avtehnik/service-doc/",
  "authors": [
    {
      "name": "Vitaliy Pitvalo",
      "email": "av.tehnik@gmail.com",
      "homepage": "https://github.com/avtehnik"
    }
  ],
  "config": {
    "bin-dir": "bin"
  },
  "require": {
    "php": ">=7.2",
    "doctrine/annotations": "*",
    "symfony/finder": ">=2.2",
    "symfony/yaml": ">=3.3"
  },
  "autoload": {
    "psr-4": {
      "ServiceDoc\\": "src"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require-dev": {
    "zendframework/zend-form": "<2.8",
    "squizlabs/php_codesniffer": ">=3.3",
    "phpunit/phpunit": ">=8"
  },
  "autoload-dev": {
    "psr-4": {
      "OpenApiTests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit && phpcs -p --extensions=php --standard=PSR2 --error-severity=1 --warning-severity=0 ./src ./tests"
  }
}
